{{!-- ALERT --}}
{{#if error}}
<div class="alert alert-danger alert-dismissible fade show font-secondary" role="alert">
  <strong class="font-primary">Oops! </strong> <span>{{error}}</span>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}}

{{!-- NAVBAR --}}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark py-0 font-primary">
    <div class="container">
        <a class="navbar-brand bigFont text-primary" href="/">b<img
                src="https://img.icons8.com/nolan/30/000000/bug.png">g tracker</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                {{#if user}}
                    <li class="nav-item">
                        <p class="nav-link text-primary">{{user.username}}</p>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link navBtn" href="/logout" id="logout-button">logout</a>
                    </li>
                {{else}}
                    <li class="nav-item">
                        <button class="nav-link navBtn" id="login-button">login</button>
                    </li>
                    <li class="nav-item">
                        <button class="nav-link navBtn" id="signup-button">sign up</button>
                    </li>
                {{/if}}
            </ul>
        </div>
    </div>
</nav>
